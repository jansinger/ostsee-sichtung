# Database Configuration
DATABASE_POSTGRES_URL="postgresql://root:mysecretpassword@localhost:5433/local"
PGUSER="root"
PGPASSWORD="mysecretpassword"
PGDATABASE="local"
PGHOST="localhost"
PGPORT="5433"

# Storage Configuration
STORAGE_PROVIDER="local"  # Options: "local", "vercel-blob", "s3", "gcs"

# Vercel Blob Storage (only needed when STORAGE_PROVIDER="vercel-blob")
BLOB_READ_WRITE_TOKEN=""

# AWS S3 Storage (only needed when STORAGE_PROVIDER="s3")
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""

# Google Cloud Storage (only needed when STORAGE_PROVIDER="gcs")
GOOGLE_CLOUD_PROJECT_ID=""
GOOGLE_CLOUD_STORAGE_BUCKET=""
GOOGLE_CLOUD_KEY_FILE=""

# Local Storage Configuration
UPLOAD_PATH="uploads"

# Application Settings
NODE_ENV="development"
PUBLIC_SITE_URL="https://localhost:4000"

# Security Settings
SESSION_SECRET="your-secret-key-here"
COOKIE_NAME="auth-cookie"

# Logging
LOG_LEVEL="info"  # Options: "trace", "debug", "info", "warn", "error", "fatal"

# Feature Flags
ENABLE_DEBUG_LOGGING="true"
ENABLE_ANALYTICS="false"


# Auth0
AUTH0_CLIENT_ID="client-id"
AUTH0_CLIENT_SECRET="client-secret"
AUTH0_DOMAIN="auth0-tenant-domain"
SESSION_SECRET="my-secret" # a secret to encrypt session id
JWKS_URL="https://<AUTH0_DOMAIN>/.well-known/jwks.json"
API_AUDIENCE="api-audience"

# Domain
PUBLIC_SITE_URL="http://localhost:4000"
